#%RAML 1.0
title: <%= apiName %>
description: <%= apiDescription %>
version: v1
mediaType: application/json
protocols: HTTPS

<% if (apiType === 'shopper') { %>
# Shopper API - requires shopper authentication
# Base path: /s/{site}/dw/shop/v1/custom/<%= apiName %>
<% } else { %>
# Data API - requires BM user or OAuth client credentials
# Base path: /s/-/dw/data/v1/custom/<%= apiName %>
<% } %>

<% if (includeExampleEndpoints) { %>
/hello:
  get:
    description: Returns a hello message
    responses:
      200:
        body:
          application/json:
            example: |
              {
                "message": "Hello from <%= apiName %>!"
              }

/items:
  get:
    description: Get a list of items
    queryParameters:
      limit:
        type: integer
        required: false
        default: 10
        description: Maximum number of items to return
      offset:
        type: integer
        required: false
        default: 0
        description: Number of items to skip
    responses:
      200:
        body:
          application/json:
            example: |
              {
                "count": 1,
                "total": 1,
                "data": [
                  {
                    "id": "item-1",
                    "name": "Example Item"
                  }
                ]
              }

  /{itemId}:
    uriParameters:
      itemId:
        type: string
        description: The item ID
    get:
      description: Get a specific item by ID
      responses:
        200:
          body:
            application/json:
              example: |
                {
                  "id": "item-1",
                  "name": "Example Item",
                  "description": "An example item"
                }
        404:
          body:
            application/json:
              example: |
                {
                  "type": "ItemNotFoundError",
                  "message": "Item not found"
                }
<% } %>
